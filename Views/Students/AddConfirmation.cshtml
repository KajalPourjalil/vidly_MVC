@model StudentPortal.Web.Models.AddStudentViewModel

<h1>Confirmation</h1>

<p>Thank you for submitting the following information:</p>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Email:</strong> @Model.Email</li>
    <li><strong>Phone:</strong> @Model.Phone</li>
    <li><strong>Subscribed:</strong> @(Model.Subscribed ? "Yes" : "No")</li>
</ul>

<a asp-action="Add" class="btn btn-primary">Return to Add page</a>
